  &#187; <%= link_to l(@custom_field.type_name), :controller => 'custom_fields', :action => 'index', :tab => @custom_field.type %>
  &#187; <%=h @custom_field.name %></h2>

<%# TODO: Might need an :as => :custom_field parameter %>
